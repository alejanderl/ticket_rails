<h1>Listing sessions</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Stall available</th>
    <th>Stall reserve</th>
    <th>Exception</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sessions.each do |session| %>
  <tr>
    <td><%= session.date %></td>
    <td><%= session.stall_available %></td>
    <td><%= session.stall_reserve %></td>
    <td><%= session.exception %></td>
    <td><%= link_to 'Show', session %></td>
    <td><%= link_to 'Edit', edit_session_path(session) %></td>
    <td><%= link_to 'Destroy', session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

