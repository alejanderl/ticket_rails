
  <tr>
    <td colspan="9">
      <a id="hide-serie" data-serie="belongs-to-serie-<%= @events.first.serie_id %>">Hide this serie</a>
    </td>
  </tr>
<% @events.each do |event| %>

  <tr class="belongs-to-serie-<%= event.serie_id %>">
    <td><%=  ( event.is_serie )?  "no": "yes" %></td>
    <td><%= event.name %></td>
    <td><%= event.date %></td>
    <td><%= event.stall_available %></td>
    <td><%= event.stall_reserve %></td>
    <td><%= event.exception %></td>
   
         <td><%= link_to 'Show',room_event_path(event.room_id,event) %></td>
     <td><%= link_to 'Edit',edit_room_event_path(event.room_id,event) %></td>
      <td><%= link_to 'destroy',room_event_path(event.room_id,event),:remote => true, method: :delete, data: {confirm: "Are you sure?"} %></td>
     
         

   </tr>
    <% end %>

